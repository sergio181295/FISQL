    <INTEGER:"INTEGER">
    |<DOUBLE:"DOUBLE">
    |<DATE:"DATE">
    |<TEXT:"TEXT">
    |<BOOL:"BOOL">
    |<DATETIME:"DATETIME">
    |<VERDADERO:"VERDADERO">
    |<FALSO:"FALSO">
    |<CREAR:"CREAR">
    |<BASE_DATOS:"BASE_DATOS">
    |<TABLA:"TABLA">
    |<OBJETO:"OBJETO">
    |<PROCEDIMIENTO:"PROCEDIMIENTO">
    |<FUNCION:"FUNCION">
    |<USUARIO:"USUARIO">
    |<COLOCAR:"COLOCAR">
    |<PASSWORD:"PASSWORD">
    |<NULO:"NULO">
    |<NO_NULO:"NO_NULO">
    |<AUTOINCREMENTABLE:"AUTOINCREMENTABLE">
    |<LLAVE_PRIMARIA:"LLAVE_PRIMARIA">
    |<LLAVE_FORANEA:"LLAVE_FORANEA">
